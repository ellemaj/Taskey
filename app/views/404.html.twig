{% extends "layouts/error.html.twig" %}

{% block title %}404{% endblock %}

{% block content %}
    <div class="text-center px-8">

        <h1 class="text-9xl font-extrabold text-blue-500">404</h1>

        <div class="w-24 h-1 bg-blue-500 mx-auto my-6 rounded"></div>

        <h2 class="text-2xl font-semibold">
            Not found
        </h2>

        <p class="text-gray-400 mt-4 max-w-md mx-auto">
            The page you're looking for doesn't exist or is
            moved to another location.
        </p>

        <a href="/"
           class="mt-10 inline-block bg-blue-600 hover:bg-blue-700
                      text-white px-8 py-3 rounded-lg shadow-lg
                      transition duration-300">
            Back to Home
        </a>

    </div>
{% endblock %}
